---
export interface Props {
	img: string;
	title: string;
	body: string;
	href: string;
}

const { img, href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<img width="300" src={img} alt="">
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		display: flex;
		justify-content: space-evenly;
		max-width: 500px;
		min-width: 300px;
		margin-top: 20px;
		padding: 10px;
		background-color: white;
		background-image: var(--accent-gradient);
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}

	.link-card > a {
		text-align: center;
		max-width: 500px;
		min-width: 300px;
		text-decoration: none;
	}
	img {
		width: 300px;
		margin-bottom: 20px;
		border-radius: 10px;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #444;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-color: rgb(var(--accent));
        color: #fff;
	}
    .link-card:is(:hover, :focus-within) a, .link-card:is(:hover, :focus-within) p {
        color: #fff;
	}
</style>
